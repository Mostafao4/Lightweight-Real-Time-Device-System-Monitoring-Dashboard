# Secret key for Flask session signing
SECRET_KEY=your-secret-key-here
ADMIN_USER=admin
ADMIN_PASS=123


# Database URL (SQLite example, use absolute path in production on Linux)
# Windows local dev: sqlite:///monitor.db
# Linux (EC2): sqlite:////home/ubuntu/monitoring/monitor.db
DATABASE_URL=sqlite:///instance\monitor.db

# Monitoring configuration
INTERVAL_SECONDS=30
PING_TIMEOUT_MS=1000
HTTP_TIMEOUT_S=3.0
TCP_TIMEOUT_S=2.0
DEGRADED_MS=800


# Email (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL_TO=

# Telegram (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

FLASK_APP=run.py
FLASK_ENV=production
